{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list article">
                <article>
                    <h1>{{ entry.title }}</h1>
                    <time datetime={{entry.date}}>{{entry.date}}</time>
                    {{#if entry.tags}}
                        <ul class="tag">
                            {{#each entry.tags}}
                                <li class="button button-round-details"><a href="/tag/{{slug}}">{{tag}}</a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                    <div class="entry">
                        <p> {{ entry.content }} </p>
                        <p><a class="link" href="/edit/{{entry.slug}}">Edit Entry</a></p>
                        <p><a class="link delete" href="/delete/{{entry.slug}}">Delete Entry</a></p>
                    </div>
            </div>
            </article>
        </div>
    </section>
    <section class="entry-comments">
        <div class="container">
            <h2>Comments</h2>
            {{#each entry.comment}}
                <div class="comment">
                    <strong>{{ name }}</strong>
                    <time datetime={{date}}>{{date}}</time>
                    <p>{{{comment}}}</p>
                </div>
            {{/each}}
            <div class="new-comment">
                <form action="/details/{{entry.slug}}" method="post">
                    <label for="name">Name</label>
                    <input type="text" name="name" value="" required placeholder="Enter name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment" required placeholder="Enter content for new comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}
{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list">
                {{#each tagEntries}}
                    <article>
                        <h1><a href="/details/{{slug}}">{{ title }}</a></h1>
                        <ul>
                            {{#each tags}}
                                <li class="button button-round2"><a href="/tag/{{slug}}">{{tag}}</a></li>
                            {{/each}}
                        </ul>
                        <time datetime={{date}}>{{date}}</time>
                    </article>
                {{/each}}
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}
{{#partial "content"}}
    <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Edit Entry</h2>
                <form action="/edited-post/{{edit.slug}}" method="post">
                    <label for="title"> Title</label>
                    <input type="text" name="title" value="{{edit.title}}"><br>
                    <label for="entry">Entry</label>
                    <textarea rows="5" name="entry">{{edit.content}}</textarea>

                    <label for="tags">Tags</label>
                    <input type="text" name="tags" value="{{#each edit.tags}} {{this.tag}}{{/each}}"><br>

                    <input type="submit" value="Save Entry" class="button">
                    <a href="/" class="button button-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}